<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.praduman.humlog.SignUpChoiceActivity"
    android:background="#ff0aff62">

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/customer_sign_up_button_text"
        android:id="@+id/signUpChoiceCustomerSignUpButton"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="200dp"
        android:background="#fff54d70"
        android:textSize="30sp"
        android:textColor="#ffffffff" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/tradesman_sign_up_button_text"
        android:id="@+id/signUpChoiceTradesmanSignUpButton"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="300dp"
        android:background="#fff54d70"
        android:textSize="30sp"
        android:textColor="#ffffffff" />
</RelativeLayout>
