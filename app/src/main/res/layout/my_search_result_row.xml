<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="#ffffffff"
    android:orientation="vertical"
    android:padding="5dp">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/mySearchResultContactLayout">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#ffffffff"
            android:id="@+id/mySearchResultNamesLayout">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ff000000"
                android:textSize="15sp"
                android:id="@+id/mySearchResultRowFirstNameText" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ff000000"
                android:textSize="15sp"
                android:id="@+id/mySearchResultRowLastNameText"
                android:layout_marginTop="4dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#ffffffff"
            android:id="@+id/mySearchResultAddressLayout"
            android:layout_marginLeft="30dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ff000000"
                android:textSize="15sp"
                android:id="@+id/mySearchResultRowStreetText" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ff000000"
                android:textSize="15sp"
                android:id="@+id/mySearchResultRowLocalityText"
                android:layout_marginTop="4dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#ffffffff"
            android:id="@+id/mySearchResultPhoneNumberAndPostCodeLayout"
            android:layout_marginLeft="30dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ff000000"
                android:textSize="15sp"
                android:id="@+id/mySearchResultRowCityText" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ff000000"
                android:textSize="15sp"
                android:id="@+id/mySearchResultRowPostCodeText"
                android:layout_marginTop="4dp" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/mySearchResultContactLayout"
        android:layout_marginTop="15dp">
        <RatingBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/mySearchResultRatingBar"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            style="?android:attr/ratingBarStyleSmall"
            android:isIndicator="true"
            android:numStars="5"
            android:stepSize="0.1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ff000000"
            android:textSize="15sp"
            android:id="@+id/mySearchResultRowNumberText"
            android:layout_marginLeft="30dp"/>


    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="#ff000000"
        android:id="@+id/mySearchResultDetailText"
        android:layout_marginTop="15dp"
        android:maxLength="120" />


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Intested"
        android:id="@+id/mySearchResultInterestedButton"
        android:background="#fff54d70"
        android:textColor="#ffffffff"
        android:textSize="15sp"
        android:layout_gravity="center_horizontal" />

</LinearLayout>
